<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/bgsip"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/sipicon5"/>


        <EditText
            android:id="@+id/editText_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_user"
            android:layout_marginTop="30dp"
            android:hint="@string/Email"
            tools:ignore="LabelFor" />
        <EditText
            android:id="@+id/editText_password"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_lock"
            android:layout_marginTop="20dp"
            android:hint="@string/Password"/>

        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_orange_light"
            android:text="@string/Login"/>

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textview_not_registered"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12dp"
                android:layout_marginTop="40dp"
                android:text="Not register?"/>
            <TextView
                android:id="@+id/textview_register_here"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="12dp"
                android:textStyle="bold"
                android:paddingLeft="30dp"
                android:text="Register here"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>


