<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddLeadFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_lead"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:text="Add Lead Register"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="60dp"
            android:text="Owner"
            android:textColor="#60CEFF"
            android:textSize="10dp" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinner_sales"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/back"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:pointerIcon="arrow"
            app:hintText="Select Owner" />

        <TextView
            android:id="@+id/textview_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="150dp"
            android:text="Customer (Brand Name)"
            android:textColor="#60CEFF"
            android:textSize="10dp" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinner_contact"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/back"
            app:hintText="Select Customer" />

        <TextView
            android:id="@+id/textview_oppty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="240dp"
            android:text="Opportunity Name"
            android:textColor="#60CEFF"
            android:textSize="10dp" />

        <EditText
            android:layout_width="300dp"
            android:id="@+id/textview_enter_oppty"
            android:layout_height="70dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/back"
            android:padding="15dp"
            android:hint="Enter opportunity name"
            android:textColor="#A1A1A1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="340dp"
            android:text="Amount"
            android:textColor="#60CEFF"
            android:textSize="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/edittext_enter_amount"
            android:layout_marginTop="355dp"
            android:background="@drawable/back"
            android:drawableLeft="@drawable/rp"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:hint="Enter amount"
            android:textColor="#A1A1A1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textview_close_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="420dp"
            android:text="Close Date"
            android:textColor="#60CEFF"
            android:textSize="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:id="@+id/edittext_select_date"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="435dp"
            android:background="@drawable/back"
            android:drawableLeft="@drawable/calendar_img"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:focusable="false"
            android:paddingLeft="15dp"
            android:hint="Select date"
            android:textSize="13dp"
            android:textColor="#A1A1A1" />

        <TextView
            android:id="@+id/textview_optional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="500dp"
            android:text="*optional"
            android:textColor="#A1A1A1"
            android:textSize="8dp" />

        <EditText
            android:layout_width="300dp"
            android:id="@+id/edittext_info"
            android:layout_height="70dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="520dp"
            android:background="@drawable/back"
            android:hint="Enter information"
            android:padding="15dp"
            android:textColor="#A1A1A1"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="86dp"
            android:layout_height="32dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="600dp"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/button_cancel"
            android:hint="Cancel" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="86dp"
            android:layout_height="32dp"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/button_submit"
            android:hint="Submit"
            android:textColorHint="@android:color/white" />

    </RelativeLayout>

</FrameLayout>