<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                        <Button
                            android:layout_width="180dp"
                            android:layout_height="85dp"
                            android:background="#00b3ff"
                            android:text="44 Lead Register"
                            android:textColor="@android:color/white"
                            android:textSize="8dp" />

                        <Button
                            android:layout_width="180dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="10dp"
                            android:background="#ffd117"
                            android:text="34 Lead Register"
                            android:textColor="@android:color/white"
                            android:textSize="8dp" />

                        <Button
                            android:layout_width="180dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="10dp"
                            android:background="#00b3ff"
                            android:text="12 Lead Register"
                            android:textColor="@android:color/white"
                            android:textSize="8dp" />

                        <Button
                            android:layout_width="180dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="10dp"
                            android:background="#ffd117"
                            android:text="24 Lead Register"
                            android:textColor="@android:color/white"
                            android:textSize="8dp" />
                </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

                <ProgressBar
                    android:id="@+id/progresslead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ProgressBar>

                <TextView
                    android:id="@+id/mNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="coba"></TextView>

                <TextView
                    android:id="@+id/mEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="coba2">
                </TextView>

                <TextView
                    android:id="@+id/mlead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="coba3"></TextView>

                <TextView
                    android:id="@+id/mopp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="coba3"></TextView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>